<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".FullscreenActivity" >
    
    <LinearLayout
        android:id="@+id/up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:orientation="horizontal" >
    </LinearLayout>

        <TextView
            android:id="@+id/questionTextView"
            android:layout_width="284dp"
            android:layout_height="78dp"
            android:layout_x="12dp"
            android:layout_y="48dp"
            android:text="TextView"
            android:textColor="#000000" />

        <Button
            android:id="@+id/submitButton"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_x="247dp"
            android:layout_y="427dp"
            android:text="Submit" />

        <TextView
            android:id="@+id/feedbackTextView"
            android:layout_width="304dp"
            android:layout_height="32dp"
            android:layout_x="7dp"
            android:layout_y="392dp"
            android:text=""
            android:textColor="#000000" />

        <Button
            android:id="@+id/hintButton"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_x="4dp"
            android:layout_y="424dp"
            android:text="Hint" />

        <Button
            android:id="@+id/nextButton"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_x="182dp"
            android:layout_y="428dp"
            android:text="Next" />

        <ImageView
            android:id="@+id/questionImageView"
            android:layout_width="match_parent"
            android:layout_height="138dp"
            android:layout_x="-4dp"
            android:layout_y="123dp"
            android:src="@drawable/question_1_1" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="75dp"
            android:layout_height="31dp"
            android:layout_x="14dp"
            android:layout_y="270dp"
            android:text="Answer : "
            android:textColor="#000000" />

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_x="11dp"
            android:layout_y="326dp"
            android:text="Explanation : "
            android:textColor="#000000" />

        <EditText
            android:id="@+id/answerEditText"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_x="104dp"
            android:layout_y="268dp"
            android:ems="10"
            android:inputType="number" 
            android:textColor="#000000">

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/explanationEditText"
            android:layout_width="196dp"
            android:layout_height="52dp"
            android:layout_x="106dp"
            android:layout_y="322dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:textColor="#000000" />

</AbsoluteLayout>